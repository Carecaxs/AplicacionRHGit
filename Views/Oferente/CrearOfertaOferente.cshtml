@{
    Layout = "~/Views/Shared/LayoutOferente.cshtml";
}


<main role="main" class="pb-3">
    <input id="nombreOferente" type="hidden" value="@ViewBag.nombre" />
    <input id="vistaActual" name="clave" type="hidden" value="@ViewBag.VistaActual" />


    <div class="container mt-5">
        <div class="contenedorExpediente">

            <div class="row">
                <form class="col-sm-6" method="post" asp-controller="Oferente" asp-action="MenuPrincipalOferente">
                    <input id="identification" name="identification" type="hidden" value="@ViewBag.identificacion" />
                    <input id="clave" name="clave" type="hidden" value="@ViewBag.clave" />

                    <button id="btnRegresar" class="btn btn-secondary mt-2">Regresar</button>

                </form>

                <div class="col-sm-6">
                    <img id="fotoPerfil" class="img-fluid img-perfil" data-toggle="modal" data-target="#imagenModal" />
                </div>

            </div>
            <form class="formEnlaces" method="post">
                <input name="identification" type="hidden" value="@ViewBag.identificacion" />
                <input id="clave" name="clave" type="hidden" value="@ViewBag.clave" />

                <ul class="nav nav-tabs d-flex justify-content-center" id="myTabs">
                    <li class="nav-item">
                        <button id="enlaceBuscar" class="btn-dark">Buscar Vacantes</button>
                    </li>
                    <li class="nav-item">
                        <button id="enlaceCrear" class="btn-dark">Crear Oferta</button>
                    </li>
                    <li class="nav-item">
                        <button id="enlaceVerMisOfertas" class="btn-dark">Ver mis Ofertas</button>
                    </li>
                    <li class="nav-item">
                        <button id="enlaceVerVacantesAplicadas" class="btn-dark">Ver Vacantes Aplicadas</button>

                    </li>

                </ul>

            </form>


            <form id="formAgregarOferta" method="post">
                <input name="identificacion" type="hidden" value="@ViewBag.identificacion" />


                <fieldset class="border p-3 mt-1">
                    <legend class="w-auto">Descripción</legend>
                    <hr />
                    <div class="form-group">
                        <textarea class="form-control" id="descripcion" name="descripcion" required tabindex="3" placeholder="Horario, disponibilidad inmediata..."></textarea>
                    </div>
                </fieldset>

   

                <div class="row mt-2">
                    <div class="col-md-4">
                        <fieldset class="border p-3">
                            <legend class="w-auto">Materias</legend>
                            <hr />
                            <div class="form-group">

                                <label for="materias">Materia:</label>
                                <select id="materias" name="materia" class="form-control">
                                    <!-- Opciones de materias -->

                                </select>
                            </div>
                        </fieldset>

                    </div>

                    <div class="col-md-4">

                        <fieldset class="border p-3">
                            <legend class="w-auto">Grupos Profesionales</legend>
                            <hr />
                            <div class="form-group">

                                <ul id="listaGrupoProfesional" class="list-group">
                                    <!-- Agrega aquí los elementos de la lista de idiomas si es necesario -->


                                </ul>
                                <button type="button" class="btn btn-primary btn mt-1" data-toggle="modal" data-target="#agregarGrupoProfesionalModal" tabindex="8">
                                    Añadir
                                </button>
                            </div>
                        </fieldset>


                    </div>


                    <div class="col-md-4">

                        <fieldset class="border p-3">
                            <legend class="w-auto">Ubicaciones</legend>
                            <hr />
                            <div class="form-group">

                         
                                <button id="" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalSeleccionUbicaciones">
                                    Elegir
                                </button>

                            </div>
                        </fieldset>


                    </div>
                </div>



                <button id="btnAgregarOferta" class="btn btn-success mt-2 w-100" tabindex="8">Agregar Oferta</button>

            </form>

        </div>

    </div>




    <!-- Modal para Añadir Materia -->
    <div class="modal fade" id="agregarMateriaModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Añadir Materia</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="col-md6">
                        <label for="materias">Materia:</label>
                        <select id="materias" class="form-control">
                            <!-- Opciones de materias -->

                        </select>
                    </div>
                    <button id="btnAgregarMateria" class="btn btn-success mt-2">Agregar Materia</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal para Añadir Grupo Profesional -->
    <div class="modal fade" id="agregarGrupoProfesionalModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Añadir Grupo Profesional</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Formulario para Añadir  -->
                    <form id="formAgregarGrupoProfesional" method="post">
                        <div class="form-group col-sm-6">
                            <label for="grupoProfesional">Grupos Profesionales:</label>

                            <select class="form-control" id="grupoProfesional" name="grupoProfesional" tabindex="1">
                         


                            </select>
                        </div>

                        <!-- Puedes agregar más campos según tus necesidades -->
                        <button id="btnAgregarGrupoProfesional" class="btn btn-success mt-2" tabindex="2">Agregar</button>


                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal de Confirmación para Eliminar Grupo Profesional -->
    <div class="modal fade" id="confirmacionEliminarModalGrupo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="">Confirmar Eliminación</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas eliminar este Grupo Profesional?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button id="confirmarEliminarGrupo" type="button" class="btn btn-danger confirmarEliminar">Eliminar</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal para la imagen ampliada -->
    <div class="modal fade" id="imagenModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img id="imagenAmpliada" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>




    <!-- Modal para la seleccion de ubicaciones -->
    <div class="modal fade" id="modalSeleccionUbicaciones" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="">Selecciona las ubicaciones de interés:</h5>
                    <button type="button" id="btnCloseModalUbicaciones" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                 
              
                        <div class="mt-2" id="provinciasCheck">
                            <!-- Checkboxes de estados y ciudades se cargarán dinámicamente desde el servidor -->
                        </div>
                 
                        <button id="btnCerrarModalubicaciones" class="btn-sm btn-primary mt-2">Confirmar</button>
         
               
                </div>
            </div>
        </div>
    </div>

</main>

<script src="@Url.Content("~/js/oferente/postulaciones.js")"></script>
