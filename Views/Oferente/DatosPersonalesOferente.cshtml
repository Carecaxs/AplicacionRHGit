@{
    Layout = "~/Views/Shared/LayoutOferente.cshtml";
}
<main role="main" class="pb-3">
    <input id="nombreVista" type="hidden" value="@ViewBag.VistaActual" />
    <input id="nombreOferente" type="hidden" value="@ViewBag.nombre" />
    <input id="apellidosOferente" type="hidden" value="@ViewBag.apellidos" />



    <div class="container">

        <div class="contenedorExpediente d-flex justify-content-center">

            <div class="">


                <form class="formEnlaces" method="post">
                    <input id="identification" name="identification" type="hidden" value="@ViewBag.identificacion" />
                    <input id="clave" name="clave" type="hidden" value="@ViewBag.clave" />

                    <ul class="nav nav-tabs d-flex justify-content-center" id="myTabs">
                        <li class="nav-item">
                            <button id="enlaceDatosPersonales" class="nav-link">Expediente Personal</button>

                        </li>
                        <li class="nav-item">
                            <button id="enlaceExpedienteAcademico" class="nav-link">Expediente Academico</button>
                        </li>
                        <li class="nav-item">
                            <button id="enlaceReferencias" class="nav-link">Perfil Laboral</button>
                        </li>
                        <li class="nav-item">
                            <button id="enlaceExpLaboral" class="nav-link">Experiencia Laboral</button>

                        </li>

                    </ul>
                </form>

                <h2 class="text-center mt-2">Expediente Personal</h2>


                <form id="expedienteForm">
                    <input name="identificacion" type="hidden" value="@ViewBag.identificacion" />

                    <div class="row">
                        <!-- Sección: Información Personal -->
                        <div class="col">
                            <fieldset class="border p-3 mt-3">
                                <legend class="w-auto">Información Personal</legend>
                                <hr />
                                <!-- Agrega aquí los demás campos de Información Personal -->
                                <div class="row">
                                    <div class="form-group col-sm-6 mt-2">
                                        <label for="nombre" class="col-sm-2 col-form-label">Nombre:</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="nombre" name="nombre" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group col-sm-6 mt-2">
                                        <label for="apellidos" class="col-sm-2 col-form-label">Apellidos:</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="apellidos" name="apellidos" disabled>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-sm-6 mt-1">
                                        <label for="nacimiento" class="col-sm-4 col-form-label">Nacimiento:</label>
                                        <div class="col-sm-10">
                                            <input type="date" class="form-control" id="nacimiento" name="nacimiento" tabindex="1">
                                        </div>
                                    </div>

                                    <div class="form-group col-sm-6 mt-1">
                                        <label for="genero" class="col-sm-4 col-form-label">Género:</label>
                                        <div class="col-sm-10">
                                            <select id="genero" class="form-control" tabindex="2">
                                                <option value="0">Seleccione una opción</option>
                                                <option value="1">M</option>
                                                <option value="2">F</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <!-- Sección: Ubicación -->
                        <div class="col">
                            <fieldset class="border p-3 mt-3">
                                <legend class="w-auto">Ubicación</legend>
                                <hr />
                                <!-- Agrega aquí los demás campos de Ubicación -->
                                <div class="row">
                                    <div class="form-group col-sm-4 mt-2">
                                        <label for="provincias" class="col-form-label">Provincia:</label>
                                        <select id="provincias" class="form-control" tabindex="3">
                                            <option value="0">Seleccione una opción</option>
                                        </select>
                                    </div>

                                    <div class="form-group col-sm-4 mt-2">
                                        <label for="cantones" class="col-form-label">Cantón:</label>
                                        <select id="cantones" class="form-control" tabindex="4">
                                            <option value="0">Seleccione una opción</option>
                                        </select>
                                    </div>

                                    <div class="form-group col-sm-4 mt-2">
                                        <label for="distritos" class="col-form-label">Distritos:</label>
                                        <select id="distritos" class="form-control" tabindex="5">
                                            <option value="0">Seleccione una opción</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row mt-3">
                                    <label for="direccion" class="col-sm-2 col-form-label">Dirección:</label>
                                    <div class="col-sm-8">
                                        <textarea id="direccion" class="form-control" placeholder="Ingrese la dirección" tabindex="6"></textarea>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>

                    <div class="row">

                        <!-- Sección: Idiomas -->
                        <div class="col">
                            <fieldset class="border p-3 mt-3">
                                <legend class="w-auto">Idiomas</legend>
                                <hr />
                                <ul id="listaIdiomas" class="list-group">
                                    <!-- Agrega aquí los elementos de la lista de idiomas si es necesario -->
                                </ul>
                            </fieldset>
                        </div>


                        <!-- Sección: Grupo Profesional -->
                        <div class="col" style="padding-bottom:3rem;">
                            <fieldset class="border p-3 mt-3">
                                <legend class="w-auto">Grupo Profesional</legend>
                                <hr />
                                <label for="grupoProfesional">Grupos Profesionales:</label>

                                <select class="form-control" id="grupoProfesional" name="grupoProfesional" tabindex="7">
                                    <option value="0">Seleccione una opción:</option>

                                    @foreach (var grupo in (SelectList)ViewData["GruposCombo"])
                                    {
                                        <option value="@grupo.Value">@grupo.Text</option>
                                    }
                                </select>
                            </fieldset>
                        </div>


                    </div>

                 
                    <!-- Sección: Contacto -->

                    <fieldset class="border p-3 mt-3">
                        <legend class="w-auto">Contacto</legend>
                        <hr />
                        <!-- Agrega aquí los demás campos de Contacto -->
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label for="correo" class="col-sm-4 col-form-label">Correo:</label>
                                <div class="col-sm-8">
                                    <input type="email" class="form-control" id="correo" name="correo" value="@ViewBag.correo" disabled>
                                </div>
                            </div>

                            <div class="form-group col-sm-6">
                                <label for="telefono" class="col-sm-4 col-form-label">Teléfono:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="telefono" name="telefono" value="@ViewBag.telefono" disabled>
                                </div>
                            </div>
                        </div>
                    </fieldset>



                    <!-- Sección: subir dimex -->

                    <fieldset id="seccionDinex" class="border p-3 mt-3">
                        <legend class="w-auto">Dimex</legend>
                        <hr />
  
                        <div class="row">
             
                            <div id="divSubirDinex" class="form-group col-sm-6">
                                <label for="fotoDimex">Subir Foto Dimex:</label>
                                <div>
                                    <input type="file" class="form-control-file" id="fotoDimex" name="fotoDimex" accept="image/*" tabindex="8" />

                                </div>
                            </div>

                            <button id="mostrarModalSubirDimex" class="btn btn-primary mt-3 col-sm-2" tabindex="9">Subir Imagen</button>

                            <div class="form-group col-sm-4">
                                <label for="estadoDimex">Estado</label>
                                <div>
                                    <input type="text" class="form-control" id="estadoDimex" name="estadoDimex" readonly />
                                </div>
                            </div>



                        </div>
                    </fieldset>



   


                    <div class="form-group col-sm-12">
                        <button id="btnGuardarCambios" class="btn btn-success mt-3 w-100" tabindex="10">Guardar Cambios</button>
                    </div>
                </form>

                <form method="post" asp-controller="Oferente" asp-action="MenuPrincipalOferente">
                    <input id="identification" name="identification" type="hidden" value="@ViewBag.identificacion" />
                    <input id="clave" name="clave" type="hidden" value="@ViewBag.clave" />
                    <div class="form-group col-sm-12">
                        <button id="btnRegresar" class="btn btn-secondary mt-2 w-100" tabindex="1">Regresar</button>
                    </div>
                </form>

            </div>
        </div>
 
    </div>





    <!-- Modal para Añadir Idioma -->
    <div class="modal fade" id="agregarIdiomaModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Añadir Idioma</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Formulario para Añadir Título -->
                    <form id="formAgregarIdioma" method="post">
                        <div class="form-group">
                            <label for="nombreIdioma">Idioma:</label>
                            <select class="form-control" id="nombreIdioma" name="nombreIdioma" required>
                                @foreach (var idioma in (SelectList)ViewData["IdiomasCombo"])
                                {
                                    <option value="@idioma.Value">@idioma.Text</option>
                                }
                            </select>
                        </div>

                        <!-- Puedes agregar más campos según tus necesidades -->
                        <button id="btnAgregarIdiomaModal" class="btn btn-success mt-2">Agregar Idioma</button>


                    </form>
                </div>
            </div>
        </div>
    </div>





    <!-- Modal de Confirmación para Eliminar Idioma -->
    <div class="modal fade" id="confirmacionEliminarModalIdioma" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmar Eliminación</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas eliminar este Idioma?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button id="confirmarEliminar" type="button" class="btn btn-danger">Eliminar</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal de Confirmación subida dimex-->
    <div class="modal fade" id="SubirDimexModal" tabindex="-1" role="dialog" aria-labelledby="confirmacionModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmacionModalLabel">Confirmación</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas subir la imagen?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="confirmarSubidaDimex">Confirmar</button>
                </div>
            </div>
        </div>
    </div>


</main>

<script src="~/js/oferente/expediente.js"></script>