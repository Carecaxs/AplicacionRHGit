@{
    Layout = "~/Views/Shared/LayoutOferente.cshtml";
}
<main role="main" class="pb-3">
 


    <div class="container mt-5">
        <div class="contenedorExpediente">
            <h1 class="text-center">Lista de Títulos</h1>

            <!-- Lista de Títulos -->
            <ul id="listaTitulo" class="list-group">
                @if (ViewData["Titulos"] != null)
                {
                    foreach (SelectListItem titulo in (SelectList)ViewData["Titulos"])
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center" data-id="@titulo.Value">
                            <span>@titulo.Text</span>
                            <div>
                                <button class="btnEditarTitulo btn btn-primary btn-sm"> <i class="fas fa-pencil-alt"></i></button>
                                <button class="btnEliminarTitulo btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>

                            </div>
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        No tienes titulos ingresados
                    </li>
                }
            </ul>

            <!-- Botón para Añadir Título -->
            <div class="form-group col-sm-12">
                <button id="abrirModalAgregarTitulo" type="button" class="btn btn-primary mt-3 w-100" data-toggle="modal" data-target="#agregarTituloModal">
                    Añadir Título
                </button>
            </div>
            <form method="post" asp-controller="Oferente" asp-action="MenuPrincipalOferente">
                <input id="identification" name="identification" type="hidden" value="@ViewBag.identificacion" />
                <input id="clave" name="clave" type="hidden" value="@ViewBag.clave" />
                <div class="form-group col-sm-12">
                    <button id="btnRegresar" class="btn btn-secondary mt-2 w-100">Regresar</button>
                </div>
            </form>

           
        </div>

    </div>




    <!-- Modal para Añadir Título -->
    <div class="modal fade" id="agregarTituloModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Añadir Título</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Formulario para Añadir Título -->
                    <form id="formAgregarTitulo" method="post">
                        <div class="form-group">
                            <label for="nivelEducacion">Nivel de Educación:</label>
                            <select class="form-control" id="nivelEducacion" name="nivelEducacion" required>
                                @foreach (var grado in (SelectList)ViewData["Grados"])
                                {
                                    <option value="@grado.Value">@grado.Text</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="titulo">Título:</label>
                            <input type="text" class="form-control" id="titulo" name="titulo" required />
                        </div>

                        <div class="form-group">
                            <label for="institucion">Institución:</label>
                            <input type="text" class="form-control" id="institucion" name="institucion" required />
                        </div>

                        <div class="form-group">
                            <label for="fechaObtenido">Fecha Obtenido:</label>
                            <input type="date" class="form-control" id="fechaObtenido" name="fechaObtenido" required />
                        </div>

                        <div class="form-group">
                            <label for="folio">Folio:</label>
                            <input type="number" class="form-control" name="folio" id="folio" required />
                        </div>

                        <div class="form-group">
                            <label for="asiento">Asiento:</label>
                            <input type="number" class="form-control" id="asiento" name="asiento" required />
                        </div>


                        <!-- Campo para subir foto -->
                        <div class="form-group">
                            <label for="fotoTitulo">Subir Foto del Título:</label>
                            <div>
                                <input type="file" class="form-control-file" id="fotoTitulo" name="fotoTitulo" accept="image/*" required />
                                
                            </div>
                            
                            
                        </div>

                        <!-- Puedes agregar más campos según tus necesidades -->
                        <button id="agregarTitulo" class="btn btn-success mt-2">Guardar Título</button>
                        <button id="actualizarTitulo" class="btn btn-success mt-2" >Guardar Cambios</button>

                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal de Confirmación para Eliminar Título -->
    <div class="modal fade" id="confirmacionEliminarModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmar Eliminación</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas eliminar este título?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button id="confirmarEliminar" type="button" class="btn btn-danger">Eliminar</button>
                </div>
            </div>
        </div>
    </div>






  

</main>

<script src="~/js/oferente/expediente.js"></script>