                        <!-- Campo para subir foto -->
                        <div class="form-group">
                            <label for="fotoTituloDiploma">Subir Foto del Título:</label>
                            <div>
                                <input id="fotoTituloDiploma" type="file" class="form-control-file fotoTitulo" name="fotoTitulo" accept="image/*" required tabindex="9" />

                            </div>
                            <img src="#" class="previewImage" alt="Vista previa de la imagen" style="max-width: 100%; max-height: 200px; margin-top: 10px; display: none;" />

