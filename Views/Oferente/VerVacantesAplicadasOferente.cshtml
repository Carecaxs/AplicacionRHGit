@{
    Layout = "~/Views/Shared/LayoutOferente.cshtml";
}
<main role="main" class="pb-3">
    <input id="nombreOferente" type="hidden" value="@ViewBag.nombre" />
    <input id="vistaActual" name="clave" type="hidden" value="@ViewBag.VistaActual" />


    <div class="container mt-5">
        <div class="contenedorExpediente">

            <div class="row">
                <form class="col-sm-6" method="post" asp-controller="Oferente" asp-action="MenuPrincipalOferente">
                    <input id="identification" name="identification" type="hidden" value="@ViewBag.identificacion" />
                    <input id="clave" name="clave" type="hidden" value="@ViewBag.clave" />

                    <button id="btnRegresar" class="btn btn-secondary mt-2">Regresar</button>

                </form>

                <div class="col-sm-6">
                    <img id="fotoPerfil" class="img-fluid img-perfil" data-toggle="modal" data-target="#imagenModal" />
                </div>

            </div>
            <form class="formEnlaces" method="post">
                <input name="identification" type="hidden" value="@ViewBag.identificacion" />
                <input id="clave" name="clave" type="hidden" value="@ViewBag.clave" />

                <ul class="nav nav-tabs d-flex justify-content-center" id="myTabs">
                    <li class="nav-item">
                        <button id="enlaceBuscar" class="btn-primary">Buscar Vacantes</button>
                    </li>
                    <li class="nav-item">
                        <button id="enlaceCrear" class="btn-primary">Crear Oferta</button>
                    </li>
                    <li class="nav-item">
                        <button id="enlaceVerMisOfertas" class="btn-primary">Ver mis Ofertas</button>
                    </li>
                    <li class="nav-item">
                        <button id="enlaceVerVacantesAplicadas" class="btn-primary">Ver Vacantes Aplicadas</button>

                    </li>

                </ul>

            </form>



            <div class="table-responsive mt-5">
                <table id="" class="table table-bordered">
                    <thead class="tabla-head">
                        <tr class="text-center">
                            <th>Publicado</th>
                            @*      <th>Institución</th> *@
                            <th>Puesto</th>
                            @*       <th>Materia</th>
                            <th>Descripción</th> *@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="listaOfertasAplicadas">
                    </tbody>
                </table>
            </div>


        </div>

    </div>



    <!-- Modal para ver detqalles de oferta -->
    <div class="modal fade" id="verOfertaModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ver Oferta</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Formulario para ver oferta -->


                    <input type="hidden" class="form-control" id="idOferta" />

                    <div class="form-group mt-1 col-sm-6">
                        <label class="label-custom-font" for="tituloOferta">Oferta</label>
                        <input type="text" class="form-control" id="tituloOferta" readonly tabindex="1" />
                    </div>

                    <div class="form-group mt-1 col-sm-12">
                        <label class="label-custom-font" for="nombreInstitucion">Institución</label>
                        <input type="text" class="form-control" id="nombreInstitucion" readonly tabindex="2" />
                    </div>

                    <div class="form-group mt-1 col-sm-6">
                        <label class="label-custom-font" for="nombreMateria">Materia</label>
                        <input type="text" class="form-control" id="nombreMateria" readonly tabindex="3" />
                    </div>

                    <div class="form-group mt-1 col-sm-12">
                        <label class="label-custom-font" for="descripcionOferta">Requisitos</label>
                        <textarea class="form-control" id="descripcionOferta" readonly tabindex="4"></textarea>
                    </div>

                    <div class="form-group mt-1 col-sm-4">
                        <label class="label-custom-font" for="publicacionOferta">Publicado</label>
                        <input type="date" class="form-control" id="publicacionOferta" readonly tabindex="5" />
                    </div>


                    <div class="form-group mt-2 col-sm-12 text-end">
                        <button id="btnCancelarPostulacion" class="btn btn-danger" tabindex="6">Cancelar Postulación</button>
                    </div>


                </div>
            </div>
        </div>
    </div>



    <!-- Modal de Confirmación para Cancelar Postulacion -->
    <div class="modal fade" id="confirmacionCancelacionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmar Eliminación</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas cancelar está postulación?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button id="confirmarCancelacion" type="button" class="btn btn-danger">Si</button>
                </div>
            </div>
        </div>
    </div>




    <!-- Modal para la imagen ampliada -->
    <div class="modal fade" id="imagenModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img id="imagenAmpliada" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>





</main>

<script src="~/js/oferente/postulaciones.js"></script>