@{
    Layout = "~/Views/Shared/LayoutReclutador.cshtml";
}



<main role="main" class="pb-3">
    <input id="nombreVista" type="hidden" value="@ViewBag.VistaActual" />
    <input id="nombreOferente" type="hidden" value="@ViewBag.nombre" />
    <input id="apellidosOferente" type="hidden" value="@ViewBag.apellidos" />


    <div class="container">
        <div class="contenedorCuenta">
            <form id="formRegresar" class="col-sm-6" method="post" asp-controller="Reclutador" asp-action="MenuPrincipalReclutador">
                <input id="identification" name="identification" type="hidden" value="@ViewBag.identificacion" />
                <input id="clave" name="clave" type="hidden" value="@ViewBag.clave" />

                <button id="btnRegresar" class="btn btn-secondary mt-2">Regresar</button>

            </form>

            <form class="formEnlaces" method="post">


                <ul class="nav nav-tabs d-flex justify-content-center" id="myTabs">
                    <li class="nav-item">
                        <button id="enlaceVervacantes" class="btn-primary">Ver Vacantes</button>

                    </li>
                    <li class="nav-item">
                        <button id="enlaceCrearVacante" class="btn-primary">Crear</button>
                    </li>
                    <li class="nav-item">
                        <button id="enlaceCandidatos" class="btn-primary">Candidatos</button>
                    </li>
                </ul>

            </form>

            <form id="formularioCrearOferta">

                <fieldset class="border p-3">
                    <legend class="w-auto">Crear Oferta</legend>
                    <hr />

                    <div class="form-group">
                        <label for="titulo">Título:</label>
                        <input type="text" class="form-control" id="titulo" name="titulo" tabindex="1">
                    </div>

                    <div class="form-group">
                        <label for="descripcion">Descripción:</label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="3" placeholder="detalles, horario, etc..." tabindex="2"></textarea>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="materias">Materia:</label>
                            <select class="form-control" id="materias" name="materias" tabindex="3">
                                <!-- Aquí debes llenar el combo box con las opciones correspondientes -->
                                <option value="0">Seleccione una opcion</option>
                            </select>
                        </div>

                        <div class="form-group col-md-4">
                            <label for="grupoProfesional">Grupo Profesional:</label>
                            <select class="form-control" id="grupoProfesional" name="grupoProfesional" tabindex="4">
                                <!-- Aquí debes llenar el combo box con las opciones correspondientes -->
                                <option value="0">Seleccione una opcion</option>
                            </select>
                        </div>

                        <div class="form-group col-md-4">
                            <label for="numVacantes">Cantidad:</label>
                            <input type="text" class="form-control" id="numVacantes" name="numVacantes" placeholder="cantidad vacantes" tabindex="5">
                        </div>

                    </div>

                    <div class="form-group d-flex justify-content-end">
                        <button tabindex="6" id="btnCrearOferta" class="btn btn-success mt-2">Crear</button>
                    </div>


                </fieldset>

            </form>
        </div>
    </div>



    <script src="@Url.Content("~/js/reclutador/reclutamiento.js")"></script>


</main>


