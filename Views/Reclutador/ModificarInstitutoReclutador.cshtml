@{
    Layout = "~/Views/Shared/LayoutReclutador.cshtml";
}



<main role="main" class="pb-3">
    <input id="nombreVista" type="hidden" value="@ViewBag.VistaActual" />
    <input id="nombreOferente" type="hidden" value="@ViewBag.nombre" />
    <input id="apellidosOferente" type="hidden" value="@ViewBag.apellidos" />


    <div class="container">
        <div class="contenedorCuenta">
            <form id="formRegresar" class="col-sm-6" method="post" asp-controller="Reclutador" asp-action="MenuPrincipalReclutador">
                <input id="identification" name="identification" type="hidden" value="@ViewBag.identificacion" />
                <input id="clave" name="clave" type="hidden" value="@ViewBag.clave" />

                <button id="btnRegresar" class="btn btn-secondary mt-2">Regresar</button>

            </form>

            <form class="formEnlaces" method="post">
  

                <ul class="nav nav-tabs d-flex justify-content-center" id="myTabs">
                    <li class="nav-item">
                        <button id="enlaceModificar" class="btn-dark">Modificar</button>

                    </li>
                    <li class="nav-item">
                        <button id="enlaceAdministrarMaterias" class="btn-dark">Administrar Materias</button>
                    </li>

                </ul>

            </form>

            <form id="formularioInstitucion">

                <fieldset class="border p-3">
                    <legend class="w-auto">Actualizar Institución</legend>
                    <hr />
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="provincias">Provincia:</label>
                            <input type="text" class="form-control" id="provincias" name="provincias" readonly>
                        </div>

                        <div class="form-group col-md-4">
                            <label for="cantones">Cantón:</label>
                            <input type="text" class="form-control" id="cantones" name="cantones" readonly>
                        </div>

                        <div class="form-group col-md-4">
                            <label for="distritos">Distrito:</label>
                            <input type="text" class="form-control" id="distritos" name="distritos" readonly>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="institucion">Institución:</label>
                            <input type="text" class="form-control" id="institucion" name="institucion" readonly>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="contacto">Contacto:</label>
                            <input type="text" class="form-control" id="contacto" name="contacto">
                        </div>
                    </div>



                    <div class="form-group">
                        <label for="direccion">Dirección Exacta:</label>
                        <textarea class="form-control" id="direccion" name="direccion"></textarea>
                    </div>


                    <div class="form-group d-flex justify-content-end">
                        <!-- Modificado: d-flex y justify-content-end -->
                        <button id="btnActualizarInstitucion" class="btn btn-success mt-2">Actualizar</button>
                    </div>

                </fieldset>

            </form>
        </div>
    </div>





    <script src="@Url.Content("~/js/reclutador/seccioninstitucionreclutador.js")"></script>


</main>

