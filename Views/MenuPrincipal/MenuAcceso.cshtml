
@{
    ViewBag.Title = "Menú Principal";
}



<div class="container">
    <h1 class="text-center mt-2 tituloInicio">Bienvenido a la plataforma RH</h1>



    <div class="row">
        <div class="col-md-6">
            <div class="card h-100">
                <img src="~/images/reclutamiento.png" class="card-img-bottom img-fluid same-height" />
               
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Reclutador</h5>
                    <p class="card-text">Cuenta para administrar el personal de una institución educativa.</p>
                    <p class="card-text">Acá puedes reclutar personal para tu institución</p>
                    <a asp-controller="Login" asp-action="Crear" asp-route-tipoUsuario="Reclutador" class="btn btn-primary mt-auto">Crear Cuenta</a>
                    <a href="#seccionInicioSesion" class="btn btn-primary mt-2 d-md-none">Acceder</a>


                </div>
            </div>
           
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <img src="~/images/oferenteinicio.jpg" class="card-img-bottom img-fluid same-height" />
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Oferente</h5>
                    <p class="card-text">Cuenta para buscar trabajo en alguna institución educativa.</p>
                    <p class="card-text">Creación de currículum de forma profesional.</p>
                    <a asp-controller="Login" asp-action="Crear" asp-route-tipoUsuario="Oferente" class="btn btn-primary mt-auto">Crear Cuenta</a>

                    <a href="#seccionInicioSesion" class="btn btn-primary mt-2 d-md-none">Acceder</a>

                </div>
            </div>
        </div>
    </div>

    <div class="bg-light p-3 rounded mt-3">
        <div class="d-flex flex-column align-items-center">
        <h2 id="seccionInicioSesion">Iniciar sesión</h2>
        <div class="form-group col-md-3 mt-2">
            <label for="userType">Tipo de Usuario</label>
            <select id="userType" class="form-control">
                <option value="Recruiter">Reclutador</option>
                <option value="Provider">Oferente</option>
            </select>
        </div>

        <div class="form-group col-md-3 mt-2">
            <label for="identificationType">Tipo de Identificación</label>
            <select id="identificationType" class="form-control">
                <option value="null">Seleccione una opción</option>
                <option value="Cedula">Cédula de Identidad</option>
                <option value="Dinex">DINEX</option>
                <option value="Pasaporte">Pasaporte</option>
            </select>
        </div>
        <div class="form-group col-md-3 mt-2">
            <label for="identification">Identificación</label>
            <input type="text" id="identification" class="form-control" disabled/>
        </div>

        <div class="form-group col-md-3 mt-2">
            <label for="password">Contraseña</label>
            <input type="password" id="password" class="form-control" />
        </div>

        <button id="btnSubmit" class="btn btn-primary mt-2">Iniciar sesión</button>
        </div>
    </div>
</div>




@section scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/inputmask/dist/jquery.inputmask.js"></script>

    <script>
        $(document).ready(function () {

            $("#identificationType").change(function () {//al cambiar de seleccion en el campo tipo de cedula se aplica una diferente mascara segun su selección
                var selectedType = $(this).val();
                var mask = "";
                var identificationField = $("#identification");//input donde se pone la identificacion

                if (selectedType === "null") {
                    identificationField.prop("disabled", true); // Deshabilitar el campo
                }else{
                    identificationField.prop("disabled", false); // habilitar el campo
                }

                if (selectedType === "Cedula") {
                    mask = "99-9999-9999";
  
                } else if (selectedType === "Dinex") {
                    mask = "99-999999-9999";

                } else if (selectedType === "Pasaporte") {
                    mask = "a999999";

                } 

                $("#identification").inputmask({ mask: mask });

            });
        });

    </script>


}







