@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AplicacionRHGit</title>
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/AplicacionRHGit.styles.css")" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-"
          crossorigin="anonymous">


</head>
<body class="fondoImg">

    <div class="container">
        <div class="contenedorCuenta" style="max-width:35rem; background-color: rgba(248, 249, 250, 0.7);">
            <input id="nombreVista" type="hidden" value="@ViewBag.VistaActual" />

            <button id="btnRegresar" class="btn btn-secondary mt-2" tabindex="7">Regresar</button>

            <form id="formIngresar" method="post">
                <div class="d-flex flex-column align-items-center">

                    <div class="form-group col-sm-5 mt-2">
                        <label for="identificationType">Tipo de Identificación</label>
                        <select id="identificationType" class="form-control" tabindex="1">
                            <option value="Cedula">Cédula de Identidad</option>
                            <option value="Dinex">DINEX</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-5 mt-2">
                        <label for="identification">Identificación</label>
                        <div class="input-group">
                            <input type="text" name="identification" id="identification" class="form-control" tabindex="2" />

                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>

                        </div>
                    </div>

                    <div class="form-group col-sm-5 mt-2">
                        <label for="password">Contraseña</label>
                        <div class="input-group">
                            <input type="password" name="clave" id="password" class="form-control" tabindex="3" />

                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>

                    </div>
               
              

                    <button id="btnIniciarSesion" class="btn btn-primary mt-2" tabindex="4">Iniciar sesión</button>
                </div>
            </form>


            <div class="row justify-content-between mt-3">
                <div class="col-auto">
                    <button type="button" class="btn btn-link" id="abrirModalRestablecerClave" tabindex="5">
                        ¿Olvidó su contraseña?
                    </button>
                </div>

                <div class="col-auto">
                    <form method="post" asp-controller="Login" asp-action="Crear">
                        <input id="tipoUsuario" name="tipoUsuario" type="hidden" value="@ViewBag.tipoUsuario" />
                        <button type="submit" class="btn btn-link" tabindex="6">Registrarse</button>
                    </form>
                </div>
            </div>


   
          




        </div>
    </div>


    <!-- Modal para restablecer contraseña -->
    <div class="modal fade" id="olvideContrasenaModal" tabindex="-1" role="dialog" aria-labelledby="olvideContrasenaModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="olvideContrasenaModalLabel">Olvidé mi contraseña</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Formulario para restablecer contraseña -->

                    <div class="form-group col-md-6">
                        <label for="correo">Correo Electrónico</label>
                        <input type="email" class="form-control" id="correo" placeholder="Ingrese su correo electrónico" tabindex="1">
                    </div>

                </div>
                <div id="footerModal" class="modal-footer">
                    <button id="restablecerClave" type="button" class="btn btn-success" tabindex="2">Enviar</button>

                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/inputmask/dist/jquery.inputmask.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="@Url.Content("~/js/login/login.js")"></script>
    <script src="@Url.Content("~/js/site.js")"></script>




</body>
</html>

















