@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AplicacionRHGit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AplicacionRHGit.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-"
          crossorigin="anonymous">


</head>
<body class="fondoImg">

    <div class="container">
        <div class="bg-light p-3 rounded mt-4">
            <div class="d-flex flex-column align-items-center">
                <h2 id="seccionInicioSesion">Iniciar sesión @TempData["Usuario"]</h2>

                <div class="form-group col-sm-3 mt-2">
                    <label for="identificationType">Tipo de Identificación</label>
                    <select id="identificationType" class="form-control">
                        <option value="null">Seleccione una opción</option>
                        <option value="Cedula">Cédula de Identidad</option>
                        <option value="Dinex">DINEX</option>
                        <option value="Pasaporte">Pasaporte</option>
                    </select>
                </div>
                <div class="form-group col-sm-3 mt-2">
                    <label for="identification">Identificación</label>
                    <div class="input-group">
                        <input type="text" id="identification" class="form-control" disabled />

                        <span class="input-group-text"><i class="fas fa-id-card"></i></span>

                    </div>
                </div>

                <div class="form-group col-sm-3 mt-2">
                    <label for="password">Contraseña</label>
                    <div class="input-group">
                        <input type="password" id="password" class="form-control" />

                        <span class="input-group-text"><i class="fas fa-lock"></i></span>


                    </div>
                    <button id="showPassword" class="btn btn-link" type="button">Mostrar contraseña</button>
                </div>


                <button id="btnSubmit" class="btn btn-primary mt-2">Iniciar sesión</button>

                <div class="mt-3">
                    <a href="#">¿Olvidó su contraseña?</a>
                </div>

                <div class="mt-3">
                    <form method="post" asp-controller="Login" asp-action="Crear">
                        <input type="hidden" name="tipoUsuario" value="@TempData["Usuario"]" />
                        <button type="submit" class="btn btn-link">Registrarse</button>
                    </form>

                </div>
            </div>
        </div>
    </div>




    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/inputmask/dist/jquery.inputmask.js"></script>
    <script src="~/js/login/login.js"></script>


    }

</body>
</html>

















