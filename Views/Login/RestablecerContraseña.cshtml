@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AplicacionRHGit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AplicacionRHGit.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-"
          crossorigin="anonymous">


</head>
<body class="fondoImg">

    <input id="tipoUsuario" type="hidden" value="@ViewBag.tipoUsuario" />
    <input id="nombreVista" type="hidden" value="@ViewBag.VistaActual" />


    <!-- Modal para restablecer contraseña -->
    <div class="modal fade" id="cambiarContrasenaModal" tabindex="-1" role="dialog" aria-labelledby="cambiarContrasenaModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form id="formRestablecerClave" method="post">
                    <input id="identificacion" name="identification" type="hidden" value="@ViewBag.id" />

                    <div class="modal-header">
                        <h5 class="modal-title" id="cambiarContrasenaModalLabel">Olvidé mi contraseña</h5>

                    </div>
                    <div class="modal-body">
                        <!-- Formulario para restablecer contraseña -->

                        <div class="form-group col-md-6">
                            <label for="clave1">Ingrese la contraseña nueva</label>
                            <input type="password" class="form-control" id="clave1" tabindex="1">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="clave2">Vuelva a ingresar la contraseña</label>
                            <input type="password" class="form-control" id="clave2" tabindex="2">
                        </div>

                    </div>
                    <div id="footerModal" class="modal-footer">
                        <button id="confirmarClaveNueva" type="button" class="btn btn-success" tabindex="3">Confirmar</button>

                    </div>
                </form>

            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/inputmask/dist/jquery.inputmask.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/js/login/login.js"></script>
    <script src="~/js/site.js"></script>


    

</body>
</html>

















