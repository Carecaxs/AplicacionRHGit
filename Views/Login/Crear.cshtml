@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Creación de Perfil"] - AplicacionRHGit</title>
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/AplicacionRHGit.styles.css")" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-"
          crossorigin="anonymous">


</head>
<body class="fondoImg">


@*     <div class="col-md-6 text-right">
        <!-- La otra mitad del ancho para el botón "Regresar" alineado a la derecha -->
        <button id="btnRegresar" class="btn btn-secondary mt-2 w-100" tabindex="12">Regresar</button>
    </div> *@

    <div class="container">
        <div class="contenedorCuenta mt-5">

            <button id="btnRegresar" class="btn btn-secondary mt-2" tabindex="12">Regresar</button>

            <div class="d-flex flex-column align-items-center">
                <input id="tipoUsuario" type="hidden" value="@ViewBag.tipoUsuario"/>
                <input id="nombreVista" type="hidden" value="@ViewBag.VistaActual" />

             
           

                <form id="registroForm">
                    <fieldset class="border p-3 mt-2">
                        <legend class="w-auto">Registro</legend>
                        <hr />
                        <div class="form-group col-sm-6 mt-2">
                            <label for="identificationType">Tipo de Identificación</label>
                            <select id="identificationType" class="form-control" tabindex="1">

                                <option value="Cedula">Cédula de Identidad</option>
                                <option value="Dimex">DIMEX</option>

                            </select>
                        </div>
                        <div class="form-group col-sm-10 mt-2">
                            <label for="identification">Identificación</label>
                            <div class="input-group">
                                <input type="text" id="identification" name="identification" class="form-control" tabindex="2" />

                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>

                                <div class="input-group-append">
                                    <button id="btnVerificarCedula" class="btn btn-primary" type="button" style="margin-left: 5px;" tabindex="3">Verificar cédula</button>
                                </div>
                            </div>



                        </div>

                        <div id="campoVerificarDimex" class="form-group col-sm-10 mt-2">
                            <label for="dimex">Vuelva a digitar Dimex</label>
                            <div class="input-group">
                                <input type="text" id="dimex" class="form-control" tabindex="4" />
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            </div>
                        </div>

                        <div class="row">
                            <div id="campoNombre" class="form-group col-sm-5 mt-2">
                                <label for="nombre">Nombre</label>
                                <div class="input-group">
                                    <input type="text" id="nombre" class="form-control" tabindex="5" />
                                </div>
                            </div>

                            <div id="campoApellidos" class="form-group col-sm-5 mt-2">
                                <label for="apellidos">Apellidos</label>
                                <div class="input-group">
                                    <input type="text" id="apellidos" class="form-control" tabindex="6" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div id="campoNacimiento" class="form-group col-sm-5 mt-2">
                                <label for="nacimiento">Nacimiento</label>
                                <div class="input-group">
                                    <input type="text" id="nacimiento" class="form-control" tabindex="7" />
                                </div>
                            </div>

                            <div id="campoSexo" class="form-group col-sm-5 mt-2">
                                <label for="sexo">Sexo</label>
                                <div class="input-group">
                                    <select id="sexo" name="sexo" class="form-control" tabindex="8">
                                        <!-- Opciones de provincias -->
                                        <option value="1">Masculino</option>
                                        <option value="2">Femenino</option>
                                    </select>
                                </div>

                            </div>
                        </div>


                        <div class="row">
                            <div id="campoCorreo" class="form-group col-sm-5 mt-2">
                                <label for="correo">Correo Electrónico</label>
                                <div class="input-group">
                                    <input type="email" id="correo" class="form-control" placeholder="abc@gmail.com" tabindex="9" />
                                </div>
                            </div>

                            <div id="campoTelefono" class="form-group col-sm-5 mt-2">
                                <label for="telefono">Teléfono</label>
                                <div class="input-group">
                                    <input type="text" id="telefono" class="form-control" placeholder="8888-8888" tabindex="10" />
                                </div>
                            </div>
                        </div>


                        <div id="botones">
                            <button id="btnCrearUsuario" class="btn btn-success mt-2" tabindex="11">Crear</button>
                        </div>






                    </fieldset>


                </form>

            </div>
        </div>
    </div>




    <!-- Modal -->
    <div class="modal fade" id="confirmacionModal" tabindex="-1" role="dialog" aria-labelledby="confirmacionModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmacionModalLabel">Confirmación de cuenta</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="contenidoModal" class="modal-body">
                    <p><strong>Se ha enviado un correo de confirmación. Por favor, verifica tu correo electrónico y sigue las instrucciones para activar tu cuenta.</strong></p>
                    <a href="https://mail.google.com/">Iniciar Sesion Gmail</a>
                    <h6 class="mt-2">Ejemplo del correo</h6>
                    <img src="~/Images/msjCorreo.jpeg" alt="Ejemplo del correo" class="img-fluid">
                    <h6 class="mt-2">Ejemplo del mensaje SMS</h6>
                    <img src="~/Images/msjCodigo.png" alt="Ejemplo del mensaje" class="img-fluid">


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="loader-container">
        <div id="loader-content">
            <i class="fas fa-spinner fa-spin"></i> Cargando...
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/inputmask/dist/jquery.inputmask.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="@Url.Content("~/js/login/login.js")"></script>
    <script src="@Url.Content("~/js/site.js")"></script>

</body>
</html>

















