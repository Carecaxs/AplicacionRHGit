@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Creación de Perfil"] - AplicacionRHGit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AplicacionRHGit.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-"
          crossorigin="anonymous">


</head>
<body class="fondoImg">



     
    <div class="container">
        <div class="contenedorInicioSesion">

            <div class="d-flex flex-column align-items-center">
                <h2 id="seccionInicioSesion">Registrarse como @TempData["Usuario"]</h2>
                <input id="tipoUsuario" type="hidden" value="@TempData["Usuario"]" />
                <input id="nombreVista" type="hidden" value="@ViewBag.VistaActual" />



                <form id="registroForm" class="">
                    <div class="form-group col-md-12 mt-2">
                        <label for="identificationType">Tipo de Identificación</label>
                        <select id="identificationType" class="form-control">
                            <option value="null">Seleccione una opción</option>
                            <option value="Cedula">Cédula de Identidad</option>
                            <option value="Dimex">DIMEX</option>
                            <option value="Pasaporte">Pasaporte</option>
                        </select>
                    </div>
                    <div class="form-group col-md-12 mt-2">
                        <label for="identification">Identificación</label>
                        <div class="input-group">
                            <input type="text" id="identification" name="identification" class="form-control" disabled />

                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>

                            <div class="input-group-append">
                                <button id="btnVerificarCedula" class="btn btn-primary" type="button" style="margin-left: 5px;">Verificar cédula</button>
                            </div>
                        </div>

                

                    </div>

                    <div id="campoNombre" class="form-group col-md-12 mt-2">
                        <label for="nombre">Nombre</label>
                        <div class="input-group">
                            <input type="text" id="nombre" class="form-control" disabled />

                        </div>
                    </div>

                    <div id="campoApellidos" class="form-group col-md-12 mt-2">
                        <label for="apellidos">Apellidos</label>
                        <div class="input-group">
                            <input type="text" id="apellidos" class="form-control" disabled />

                        </div>
                    </div>

     

                    <div id="campoCorreo" class="form-group col-md-12 mt-2">
                        <label for="correo">Correo Electrónico</label>
                        <div class="input-group">
                            <input type="email" id="correo" class="form-control" placeholder="abc@gmail.com" />

                        </div>
                    </div>

                    <div id="campoTelefono" class="form-group col-md-12 mt-2">
                        <label for="telefono">Teléfono</label>
                        <div class="input-group">
                            <input type="text" id="telefono" class="form-control" placeholder="8888-8888" />

                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-6">
                            <!-- La mitad del ancho para el botón "Crear" -->
                            <button id="btnCrearUsuario" class="btn btn-success mt-2 w-100">Crear</button> 

                        </div>
                        <div class="col-md-6 text-right">
                            <!-- La otra mitad del ancho para el botón "Regresar" alineado a la derecha -->
                            <button id="btnRegresar" class="btn btn-secondary mt-2 w-100">Regresar</button>
                        </div>

                    </div>
               
                   






                </form>

            </div>
        </div>
    </div>




    <!-- Modal -->
    <div class="modal fade" id="confirmacionModal" tabindex="-1" role="dialog" aria-labelledby="confirmacionModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmacionModalLabel">Confirmación de cuenta</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="contenidoModal" class="modal-body">
                    <p><strong>Se ha enviado un correo de confirmación. Por favor, verifica tu correo electrónico y sigue las instrucciones para activar tu cuenta.</strong></p>
                    <a href="https://mail.google.com/">Iniciar Sesion Gmail</a>
                    <h6 class="mt-2">Ejemplo del correo</h6>
                    <img src="~/Images/msjCorreo.png" alt="Ejemplo del correo" class="img-fluid">
                    <h6 class="mt-2">Ejemplo del mensaje SMS</h6>
                    <img src="~/Images/msjCodigo.png" alt="Ejemplo del mensaje" class="img-fluid">
                    
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>




    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/inputmask/dist/jquery.inputmask.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/js/login/login.js"></script>
    <script src="~/js/site.js"></script>

    

</body>
</html>

















